{% extends "layout.njk" %}

{% block content %}
<div class="min-h-screen p-4 md:p-8 flex flex-col items-center justify-center">
  <div class="card p-6 md:p-8 space-y-4 max-w-md w-full">
    <div class="text-center space-y-2">
      <h1 class="text-2xl font-bold">Delete your {{ config.site.name }} account?</h1>
    </div>
    <form action="{{ config.oidc.issuerBaseUrl }}/settings" method="post" class="space-y-4">
      <button type="submit" class="btn btn-danger w-full">Delete Account</button>
      <a href="{{ config.oidc.issuerBaseUrl }}/channels" class="btn btn-outline w-full">Cancel</a>
    </form>
  </div>
  {% include "footer.njk" %}
</div>
{% endblock %}
