{% extends "layout.njk" %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-muted">
  <div class="card p-8 space-y-4 max-w-md w-full">
    <div class="text-center space-y-2">
      <img class="w-12 h-12 mx-auto" src="/icons/youtube.svg" />
      <h1 class="text-2xl font-bold">{{ config.site.name }}</h1>
      <p class="text-muted-foreground">{{ config.site.description }}</p>
    </div>
    <a class="btn btn-primary w-full" href="/auth/login">Sign in with Google</a>
  </div>
</div>
{% endblock %}